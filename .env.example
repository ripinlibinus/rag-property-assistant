# RAG Property Agent - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Configuration
# =============================================================================
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/rag_property
DATABASE_ECHO=false

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_SESSION_TTL=3600

# =============================================================================
# ChromaDB Configuration
# =============================================================================
CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_COLLECTION_NAME=properties

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# =============================================================================
# MetaProperty API Configuration (Data Source)
# =============================================================================
METAPROPERTY_API_URL=http://localhost:8000
METAPROPERTY_API_TOKEN=

# =============================================================================
# WhatsApp Forwarder Configuration
# =============================================================================
WHATSAPP_FORWARDER_URL=http://localhost:3001
WHATSAPP_WEBHOOK_SECRET=your-webhook-secret

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
